#echo $uprompt
#echo $(curl "https://discord.addja48.workers.dev/api/chat/evil_gpt/$(echo $uprompt)?format=json" -s -v)
echo -e $(curl "https://discord.addja48.workers.dev/api/chat/evil_gpt/$(echo $uprompt)?format=json" -s| jq '.response')
echo -e "${NC}${Cyan}###############################<**>##################################${NC}"